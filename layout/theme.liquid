<!DOCTYPE html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="{{ page_description | escape }}" />
    <link rel="canonical" href="{{ canonical_url }}" />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&family=Oswald:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,shrink-to-fit=no"
    />
    {{
      content_for_header
    }}
    <!-- Header hook for plugins -->
    {{
      "style-base.css" | asset_url | stylesheet_tag
    }}
    <script type="text/javascript">
      (function e(){var e=document.createElement("script");e.type="text/javascript",e.async=true,e.src="//staticw2.yotpo.com/FiIdEx8s2QPKcrYX3AvhF3ECFlVfcAPxCALThwiz/widget.js";var t=document.getElementsByTagName("script")[0];t.parentNode.insertBefore(e,t)})();
    </script>
  </head>
  <body class="{{ template.name }}">
    {% section "notification-bar" %} 
    {% section "navigation" %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% section "footer" %}


    <script type="application/json" data-ajax-cart-initial-state >
      {{ cart | json }}
    </script>   
    <script type="module">
      import '{{ "liquid-ajax-cart-v1.10.1.js" | asset_url }}';
    </script>
    {% render 'th-bundle-product' %}
  </body>
</html>
