{{ "style-clp-collection.css" | asset_url | stylesheet_tag }}

<div class="clp-collection__container container">
  {% for product in collections.frontpage.products %}
    <div class="clp-collection__product"> 
      <a class="clp-collection__product__img-content" href="{{ product.url | within: collection }}">
        <img class="clp-collection__product__img" src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
      </a>
      <a class="clp-collection__product__name" href="{{ product.url | within: collection }}">{{ product.title }}</a>
    </div>
  {% endfor %}
</div>